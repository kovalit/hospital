{% set error = form.error(model, field, {class: 'help-block'}) %}
{% set field = not language or language == model.defaultLanguage? field: field ~ '_' ~ language %}
{% set htmlOptions = htmlOptions|default({}) %}

<div class="{{ wrapperClass|default('checkbox') }}">
	<label>
		{{ form.checkBox(model, field, htmlOptions) }}
                {% if not hideLabel %}
                    {{ model.getAttributeLabel(field) }}
                {% endif %}
	</label>
	{{ error }}
</div>

